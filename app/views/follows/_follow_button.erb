<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォローを外す", follow_path(followed_id: user.id), method: :delete, class: 'btn btn-primary btn-sm' %>
  <% else %>
    <%= link_to "フォローする", follows_path(followed_id: user.id), method: :post, class: 'btn btn-primary btn-sm'  %>
  <% end %>
<% end %>